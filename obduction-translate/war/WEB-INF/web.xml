<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
							 http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
		 version="2.5">

	<!-- Servlets -->

	<!-- Dialogue service -->
	<servlet>
		<servlet-name>dialogue</servlet-name>
		<servlet-class>com.obductiongame.translate.server.service.DialogueServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>dialogue</servlet-name>
		<url-pattern>/main/dialogue</url-pattern>
	</servlet-mapping>

	<!-- Request factory -->
	<servlet>
		<servlet-name>requestFactory</servlet-name>
		<servlet-class>com.obductiongame.translate.server.CustomRequestFactoryServlet</servlet-class>
		<init-param> 
			<param-name>symbolMapsDirectory</param-name>
			<param-value>WEB-INF/deploy/main/symbolMaps/</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>requestFactory</servlet-name>
		<url-pattern>/gwtRequest</url-pattern>
	</servlet-mapping>

	<!-- XSRF protection service -->
	<servlet>
		<servlet-name>xsrf</servlet-name>
		<servlet-class>com.google.gwt.user.server.rpc.XsrfTokenServiceServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>xsrf</servlet-name>
		<url-pattern>/main/xsrf</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>gwt.xsrf.session_cookie_name</param-name>
		<param-value>JSESSIONID</param-value>
	</context-param>

	<!-- GWT logging service -->
	<servlet>
		<servlet-name>remoteLogging</servlet-name>
		<servlet-class>com.google.gwt.logging.server.RemoteLoggingServiceImpl</servlet-class>

		 <init-param>
			<param-name>symbolMaps</param-name>
			<param-value>WEB-INF/deploy/main/symbolMaps/</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>remoteLogging</servlet-name>
		<url-pattern>/main/remote_logging</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>charSetFilter</filter-name>
		<filter-class>com.obductiongame.translate.server.CharacterEncodingFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>charSetFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>

	<!-- MIME types -->
	<mime-mapping>
		<extension>html</extension>
		<mime-type>text/html; charset=UTF-8</mime-type>
	</mime-mapping>

	<mime-mapping>
		<extension>css</extension>
		<mime-type>text/css; charset=UTF-8</mime-type>
	</mime-mapping>

	<mime-mapping>
		<extension>js</extension>
		<mime-type>application/javascript; charset=UTF-8</mime-type>
	</mime-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
