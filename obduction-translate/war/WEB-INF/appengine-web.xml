			<!-- <http-header name="X-Frame-Options" value="SAMEORIGIN" /> -->
			<!-- <http-header name="Content-Security-Policy" value="sandbox allow-scripts allow-same-origin; default-src 'none'; script-src https://*obduction-translate.appspot.com:443 'unsafe-inline' 'unsafe-eval'; style-src https://*obduction-translate.appspot.com:443 'unsafe-inline'; connect-src https://*obduction-translate.appspot.com:443; img-src 'self'; frame-src https://*obduction-translate.appspot.com:443; report-uri /cspReport" />
